<script type="text/javascript">
require(['jquery', 'jquery/ui', 'jquery/validate', 'Magento_Ui/js/modal/modal'], function ($, modal) {
    $('#customerfeedbackform').validate({
        rules: {
            customer_name: {
                required: true
            },
            customer_email: {
                required: true,
                email: true
            },
            customer_phone: {
                required: true,
                rangelength: [10, 12],
                number: true
            },
            customer_subject: {
                required: true,
                minlength: 8
            },
            customer_Message: {
                required: true,
            },
            rating: {
                required: true,
            }
        },
        messages: {
            customer_name: 'Please enter Name.',
            email: {
                required: 'Please enter Email Address.',
                email: 'Please enter a valid Email Address.',
            },
            customer_phone: {
                required: 'Please enter Contact.',
                rangelength: 'Contact should be 10 digit number.'
            }
        },
        submitHandler: function (form) {
            form.submit();
        }
    });
    image.onchange = evt => {
        const [file] = image.files
        if (file) {
            $('#blah').show();
            blah.src = URL.createObjectURL(file)
        }
    }
});
</script>